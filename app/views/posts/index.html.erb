<h1>Главная страница</h1>
<div class="container">
  <div class="card-deck mb-3 text-center">
    <% @posts.each do |post| %>
      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <h3><%= post.title %></h3>
        </div>
        <div class="card-body">
          <p>
            <%= post.body %>
          </p>
          <%= link_to "Читать далее", post_path(post), :class => "btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>